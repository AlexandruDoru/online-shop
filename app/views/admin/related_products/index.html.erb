<p id="notice"><%= notice %></p>

<h1>Listing Related Products</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Related product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @related_products.each do |related_product| %>
      <tr>
        <td><%= related_product.product_id %></td>
        <td><%= related_product.related_product_id %></td>
        <td><%= link_to 'Show', related_product %></td>
        <td><%= link_to 'Edit', edit_related_product_path(related_product) %></td>
        <td><%= link_to 'Destroy', related_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Related product', new_related_product_path %>
