<%= link_to 'New', new_admin_product_path, class: 'btn btn-primary' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Actions</th>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Product Category</th>
      <th>Price</th>
      <th>Quantity</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= link_to 'Show', admin_product_path(product), class: 'btn btn-sm btn-default' %>
          <%= link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-sm btn-success' %>
          <%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </td>
        <td><%= image_tag product.image.url, class: 'small-table-image' %></td>
        <td><%= product.name %></td>
        <td><%= product.description.description %></td>
        <td><%= product.product_category.name %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>
