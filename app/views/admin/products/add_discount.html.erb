<%= form_tag admin_post_discount_path, class: 'form-horizontal' do %>
  <%= hidden_field_tag :product_id, @product.id %>
  <div class='form-group'>
    <%= label_tag :value, 'Value', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= text_field_tag :value, '',  class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <%= label_tag :since_when, 'Since when', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= text_field_tag :since_when, '',  class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <%= label_tag :until_when, 'Until when', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= text_field_tag :until_when, '',  class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag 'Submit', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
