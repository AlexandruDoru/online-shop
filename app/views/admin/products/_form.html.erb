<%= form_for [:admin, @product], html: { multipart: true, class: 'form-horizontal' } do |f| %>
  <div class='form-group'>
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
    </div>
  </div>
    <div class='form-group'>
    <%= f.label :main_category, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= select_tag :main_category_id, options_from_collection_for_select(MainCategory.all, 'id', 'name'), prompt: 'Select the main category', class: 'form-control main-category-dynamic' %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :product_category, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :product_category_id, options_from_collection_for_select(ProductCategory.all, 'id', 'name'), {}, { class: 'form-control' } %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :image, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.file_field :image, class: 'form-control' %>
    </div>
  </div>
  <%= f.fields_for :description do |ff| %>
    <div class='form-group'>
      <%= ff.label :description, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= ff.text_area :description, class: 'form-control', placeholder: 'Description' %>
      </div>
    </div>
  <% end %>
  <div class='form-group'>
    <%= f.label :price, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :price, class: 'form-control', placeholder: 'Price' %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :quantity, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :quantity, class: 'form-control', placeholder: 'Quantity' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Submit', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>

<%= form_tag admin_get_category_path, remote: true  do |f| %>
  <%= hidden_field_tag :cat_id, '', class: 'main-category-dynamic-field' %>
  <%= submit_tag :submit, style: 'display: none' %>
<% end %>