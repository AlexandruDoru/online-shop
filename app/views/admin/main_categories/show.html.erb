<div class='form-horizontal'>
  <div class="form-group">
    <strong class='col-sm-2 control-label'>Name</strong>
    <p class="col-sm-10" style="margin-top: 7px; margin-bottom: 0px;">
      <%= @main_category.name %>
    </p>
  </div>
  <div class="form-group">
    <strong class='col-sm-2 control-label'>Description</strong>
    <p class="col-sm-10" style="margin-top: 7px; margin-bottom: 0px;">
      <%= @main_category.description.description %>
    </p>
  </div>
</div>

<%= link_to 'Edit', edit_admin_main_category_path(@main_category), class: 'btn btn-primary' %>
<%= link_to 'Back', admin_main_categories_path, class: 'btn btn-default' %>
