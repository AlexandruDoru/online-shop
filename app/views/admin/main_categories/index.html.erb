<%= link_to 'New', new_admin_main_category_path, class: 'btn btn-primary' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Actions</th>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @main_categories.each do |main_category| %>
      <tr>
        <td>
          <%= link_to 'Show', admin_main_category_path(main_category), class: 'btn btn-sm btn-default' %>
          <%= link_to 'Edit', edit_admin_main_category_path(main_category), class: 'btn btn-sm btn-success' %>
          <%= link_to 'Destroy', admin_main_category_path(main_category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </td>
        <td><%= main_category.name %></td>
        <td><%= main_category.description.description %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
