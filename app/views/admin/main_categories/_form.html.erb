<%= form_for [:admin, @main_category], html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.fields_for :description do |ff| %>
      <%= ff.label :description, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= ff.text_area :description, class: 'form-control', placeholder: 'Description' %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Submit', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>