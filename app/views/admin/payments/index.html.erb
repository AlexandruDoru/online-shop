<table class="table table-hover">
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Card Number</th>
      <th>Value</th>
      <th>When</th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.order_id %></td>
        <td><%= payment.cardnumber %></td>
        <td><%= payment.order.value %></td>
        <td><%= payment.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
