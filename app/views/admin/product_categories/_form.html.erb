<%= form_for [:admin, @product_category], html: { multipart: true, class: 'form-horizontal' } do |f| %>
  <div class='form-group'>
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
    </div>
  </div>
  <%= f.fields_for :description do |ff| %>
    <div class='form-group'>
      <%= ff.label :description, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= ff.text_area :description, class: 'form-control', placeholder: 'Description' %>
      </div>
    </div>
  <% end %>
  <div class='form-group'>
    <%= f.label :main_category, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :main_category_id, options_from_collection_for_select(MainCategory.all, 'id', 'name'), { prompt: 'Select the main category' }, {class: 'form-control' } %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :image, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.file_field :image, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Submit', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>

