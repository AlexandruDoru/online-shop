<%= link_to 'New', new_admin_product_category_path, class: 'btn btn-primary' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Actions</th>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Main category</th>
    </tr>
  </thead>

  <tbody>
    <% @product_categories.each do |product_category| %>
      <tr>
        <td>
          <%= link_to 'Show', admin_product_category_path(product_category), class: 'btn btn-sm btn-default' %>
          <%= link_to 'Edit', edit_admin_product_category_path(product_category), class: 'btn btn-sm btn-success' %>
          <%= link_to 'Destroy', admin_product_category_path(product_category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </td>
        <td><%= image_tag product_category.image.url, class: 'small-table-image' %></td>
        <td><%= product_category.name %></td>
        <td><%= product_category.description.description %></td>
        <td><%= product_category.main_category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
