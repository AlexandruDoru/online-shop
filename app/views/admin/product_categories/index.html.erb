<p id="notice"><%= notice %></p>

<h1>Listing Product Categories</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Main category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_categories.each do |product_category| %>
      <tr>
        <td><%= product_category.image %></td>
        <td><%= product_category.name %></td>
        <td><%= product_category.description.description %></td>
        <td><%= product_category.main_category.name %></td>
        <td><%= link_to 'Show', admin_product_category_path(product_category) %></td>
        <td><%= link_to 'Edit', edit_admin_product_category_path(product_category) %></td>
        <td><%= link_to 'Destroy', admin_product_category_path(product_category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

