<table class="table table-hover">
  <thead>
    <tr>
      <th>Actions</th>
      <th>Profile Picture</tH>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Role</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to 'Show', admin_user_path(user), class: 'btn btn-sm btn-default' %>
          <%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-sm btn-success' %>
          <%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </td>
        <td><%= image_tag user.thumbnail.url, class: 'small-table-image' %></td>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.role %></td>
      </tr>
    <% end %>
  </tbody>
</table>
