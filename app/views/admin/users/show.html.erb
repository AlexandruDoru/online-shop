<div class='form-horizontal'>
  <div class="form-group">
    <strong class='col-sm-2 control-label'>Firstname</strong>
    <p class="col-sm-10" style="margin-top: 7px; margin-bottom: 0px;">
      <%= @user.firstname %>
    </p>
  </div>
  <div class="form-group">
    <strong class='col-sm-2 control-label'>Lastname</strong>
    <p class="col-sm-10" style="margin-top: 7px; margin-bottom: 0px;">
      <%= @user.lastname %>
    </p>
  </div>
  <div class="form-group">
    <strong class='col-sm-2 control-label'>Thumbnail</strong>
    <p class="col-sm-10" style="margin-top: 7px; margin-bottom: 0px;">
      <%= image_tag @user.thumbnail.url, style: 'max-width: 300px;' %>
    </p>
  </div>
  <div class="form-group">
    <strong class='col-sm-2 control-label'>Role</strong>
    <p class="col-sm-10" style="margin-top: 7px; margin-bottom: 0px;">
      <%= @user.role %>
    </p>
  </div>
  <div class="form-group">
    <strong class='col-sm-2 control-label'>Phone Number</strong>
    <p class="col-sm-10" style="margin-top: 7px; margin-bottom: 0px;">
      <%= @user.phone_number %>
    </p>
  </div>
</div>


<%= link_to 'Edit', edit_admin_user_path(@user), class: 'btn btn-primary' %>
<%= link_to 'Back', admin_user_path, class: 'btn btn-default' %>
